<div class="container">
    <div class="jumbotron">
        <h1>Eat Da Burger!</h1>
        <br>
        <h3>Choose a burger!</h3>
        <form class="create-form">
            <div class="form-group">
                <label for="newBurger">Order</label>
                <input type="text" id="newBurger" name="burger">
                <button type="submit" class="btn btn-success" id="addburger">
                    <span class="fa fa-thumbs-up"></span>
                </button>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside">Send Your Order</div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span>{{this.id}} - {{this.burgerName}}</span>
                        <button type="button" class="eatBurger btn btn-warning" id="eatBtn" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                        <br>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside">Devour</div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}

                        <span>{{this.id}} - {{this.burgerName}}</span>
                        <button type="button" class="trashBurger btn btn-danger" id="trashBtn" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <br>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>